<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- DB접속정보 값을 가지고 있는 파일 -->
	<typeAliases>
		<typeAlias type="org.scit.app.vo.Notice" alias="Notice"/>	
		<typeAlias type="org.scit.app.vo.User" alias="User"/>
		<typeAlias type="org.scit.app.vo.Chat" alias="Chat"/>
		<typeAlias type="org.scit.app.vo.Vote" alias="Vote"/>
		<typeAlias type="org.scit.app.vo.Theme" alias="Theme"/>		
		<typeAlias type="org.scit.app.vo.Project" alias="Project"/>
		<typeAlias type="org.scit.app.vo.Gantchart" alias="Gantchart"/>
		<typeAlias type="org.scit.app.vo.GantMember" alias="GantMember"/>
		<typeAlias type="org.scit.app.vo.Scrap" alias="Scrap"/>
		<typeAlias type="org.scit.app.vo.Message" alias="Msg"/>
		<typeAlias type="org.scit.app.vo.Storage" alias="Storage"/>		
	</typeAliases>
	
	<!-- SQL문 정의한 파일 포함 -->
	<mappers>
		<mapper resource="mappers/userMapper.xml"/>
		<mapper resource="mappers/projectMapper.xml"/>
		<mapper resource="mappers/chatMapper.xml"/>
	</mappers>
	
</configuration>
